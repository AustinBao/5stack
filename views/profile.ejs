<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/steam.png" type="image/png" />
  <title>5Stack</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-dark text-white vh-100 p-4 d-flex flex-column">
  <header class="d-flex align-items-center justify-content-between mb-5">
    <div>
      <h4 class="mb-0">Welcome, <%= user.displayName %></h4>
      <small>Steam ID: <%= user.id %></small>
    </div>
    <!-- <div>
      <a id="randomGame" class="btn btn-outline-light">Choose For Me</a>
    </div> -->
    <div>
      <a href="/logout" class="btn btn-outline-light">Logout</a>
    </div>
  </header>

  <div class="mb-3 position-relative">
    <input type="search" id="friendSearch" class="form-control" placeholder="Search friends to filter games..." autocomplete="off"/>
    <ul id="autocompleteList" class="list-group position-absolute bg-white w-100" style="z-index: 1000; max-height: 200px; overflow-y: auto;"></ul>
  </div>

  <div id="selectedFriends" class="mb-3 d-flex flex-wrap gap-2"></div>

  <h2>Your Steam Library </h2>

  <% if (games.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="gamesContainer">
      <% games.forEach(game => { %>
        <div class="col game-item">
          <div class="card text-dark h-100">
            <img src="https://steamcdn-a.akamaihd.net/steam/apps/<%= game.appid %>/header.jpg" class="card-img-top" alt="<%= game.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= game.name %></h5>
              <p class="card-text">Played: <%= Math.round(game.playtime_forever / 60) %> hours</p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>You have no games or your library is private.</p>
  <% } %>

  <script>
    const friends = <%- JSON.stringify(friends) %>;
    const allGames = <%- JSON.stringify(games) %>;
    const sharedGamesByFriend = <%- JSON.stringify(sharedGamesByFriend) %>;
  </script>

  <script src="friends.js"></script>

</body>
</html>
